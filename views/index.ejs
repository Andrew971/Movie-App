<html>

<head>
    <title>Home</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

</head>

<body>
    <div class="container">
        <h1>Hello movies!</h1>
        <div class="row">
            <div class="col"> <ul class="list-unstyled">
                <% for(var i=0; i<movies.length; i++) {%>
                    <li class="media">
                        <img class="mr-3" src="<%= movies[i].img %>" alt="Generic placeholder image">
                        <div class="media-body">
                            <h5 class="mt-0 mb-1">
                                <%= movies[i].title %>
                            </h5>
                            <%= movies[i].plot %>
                        </div>
                    </li>

                    <% } %>
                        </ul>
            </div>
        </div>
    </div>
</body>

</html>